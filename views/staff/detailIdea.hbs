<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>    
    <title>Document</title>
</head>

    <body>
        <input type="hidden" name="txtId" value="{{user._id}}">

        <input type="hidden" id="ideaID" value="{{i._id}}">
        Poster: {{i.user.name}}<br>
        Title: {{i.title}}<br>
        Text: {{i.text}}<br>

        <i class="fa fa-eye" style="font-size:24px"></i> {{i.view}} views <br><br>

        <button type="button" class="btn btn-default" onclick="doLike();">
            <i class="fa fa-thumbs-up" style="font-size:24px"></i>
            <p id="likeIdea">{{i.like.length}}</p>
        </button>

        <button type="button" class="btn btn-default" onclick="doDislike();">
            <i class="fa fa-thumbs-down" style="font-size:24px"></i>
            <p id="dislikeIdea">{{i.dislike.length}}</p>
        </button>

        <div class="card my-4">
            <div class="card-header">
                Leave a comment:
            </div>
            <div>{{i.comment}}</div>
            <div class="card-body">
                <form action="">
                    <div class="form-group">
                        <input type="text" name="txtComment">
                    </div>
                    <input type="submit" class="btn btn-primary" value="Post comment">
                </form>
            </div>
        </div>


    </body>
        <script type="text/javascript">
            function doLike() {
                var xhttp = new XMLHttpRequest();
                xhttp.open("POST", "/staff/doLikeJS",true);
                xhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");

                xhttp.onreadystatechange = function(){
                    if (this.readyState == 4 && this.status == 200) {
		                var response = JSON.parse(this.responseText);
                        if(response.status=="success"){
                            //update likes
                            var like = document.getElementById("likeIdea").innerHTML;
                            like = parseInt(like);
                            like++;
                            document.getElementById("likeIdea").innerHTML = like;
                        }else{
                            alert(response.message);
                        }
                    }
                }
                
                var ideaId =  document.getElementById("ideaID").value;
                xhttp.send("ideaId="+ideaId);
            }

            function doDislike() {
                var xhttp = new XMLHttpRequest();
                xhttp.open("POST", "/staff/doDislikeJS",true);
                xhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded");

                xhttp.onreadystatechange = function(){
                    if(this.readyState == 4 && this.status == 200){
                        var response=JSON.parse(this.responseText);
                        if(response.status=="success"){
                            //update dislikes
                            var dislike = document.getElementById("dislikeIdea").innerHTML;
                            dislike = parseInt(dislike);
                            dislike++;
                            document.getElementById("dislikeIdea").innerHTML = dislike;
                        }else{
                            alert(response.message);
                        }
                    }
                }
                
                var ideaId =  document.getElementById("ideaID").value;
                xhttp.send("ideaId = "+ideaId);
            }


        </script>
</html>